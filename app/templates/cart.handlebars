<h1> This is your cart</h1>
<div>
  <table>
    <thead>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Subtotal</th>
      <th></th>

    </thead>
    <tbody>
    {{# each items}}
      <tr>
        <td>{{ this.product.name }}</td>
        <td>{{ input type="number" value=quantity min=1 }}</td>
        <td>{{ format-currency this.current_price }}</td>
        <td>{{ format-currency this.subtotal }}</td>
        <td><button href="#" {{ action 'removeItem' this }}>Remove</button></td>

      </tr>
      {{/ each}}
      <tr>
        <td><strong>Total</strong></td>
        <td></td>
        <td></td>
        <td> {{ format-currency total }} </td>
      </tr>
    </tbody>
  </table>
  <a href="#" {{ action 'checkout' this }}>Checkout</a>
  <!-- {{# link-to cart.checkout this }}
  checkout?
  {{/link-to}} -->
</div>

<div>{{ outlet checkout }}</div>