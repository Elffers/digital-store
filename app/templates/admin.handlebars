<h1>ADMIN PAGE</h1>
<div class='row'>
  <div class='col-lg-6'>
    <h2>Orders</h2>
    <table class='table table-hover'>
      <thead>
        <th>Customer</th>
        <th>Status</th>
        <th>Update</th>
      </thead>
      <tbody>
    </table>
  </div>
  <div class='col-lg-6'>
    <h2>
      Products
      {{#link-to 'productNew' class='btn btn-info'}}Add Product{{/link-to}}
    </h2>
    <table class='table table-hover'>
      <thead>
        <th>Name</th>
        <th>Edit</th>
        <th>Remove</th>
      </thead>
      <tbody>
      {{# each}}
        <tr>
          <td>
            <img {{ bind-attr src=avatar }}>
            {{#link-to 'product' this }}{{ name }}{{/link-to}}
          </td>
          <td><button {{#link-to 'productEdit' this }}Edit{{/link-to}}</td>
          <td><button {{ action 'deleteProduct' this }}>Delete</button></td>
        </tr>
      {{/each }}
      </tbody>
    </table>
  </div>
</div>