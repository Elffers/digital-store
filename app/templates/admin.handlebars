<h1>ADMIN PAGE</h1>
<div class='row'>
  <div class='col-lg-6'>
    <h2>Orders</h2>
    <table class='table table-hover'>
      <thead>
        <th>Customer</th>
        <th>Status</th>
        <th>Update</th>
      </thead>
      <tbody>
      {{#each}}
      <tr>
        <td>
          {{# link-to "order" this}}
          {{ customer_name }}
          {{/ link-to }}
        </td>
        <td>
          {{ status }}
        </td>
        <td>
          <button href="#" {{ action 'update_status' this }}>Update</button>
        </td>
      </tr>
    {{/each}}
    </table>
    {{ outlet orders }}
  </div>
  <div class='col-lg-6'>
    <h2>Products</h2>
    {{ outlet products }}
  </div>
</div>