<h1>Orders Index</h1>
<div class='row'>
  <div class='col-lg-8'>
    <table class='table table-hover'>
      <thead>
        <th>Customer</th>
        <th>Update</th>
        <th>Status</th>
      </thead>
      <tbody>
        {{#each}}
          <tr>
            <td>
              {{# link-to "order" this}}
                {{ customer_name }}
              {{/ link-to }}
            </td>
            <td>
              BUTTON
            </td>
            <td>
              {{ status }}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>